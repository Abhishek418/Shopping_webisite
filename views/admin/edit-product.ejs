        <div class="container w-50">
            <h2 class="m-auto text-center">Add Your Product</h2>
            <form action="/admin/<% if(editing){ %>edit-product<% }else{ %>add-product<% } %>  " method="POST" class="form-group">
                <input type="text" class="form-control ml-3" placeholder="name" name="title" id="title" value="<% if(editing){ %><%=product.title %><% } %>">
                <input type="text" class="form-control" placeholder="image url" name="imageUrl" id="imageUrl" value=<% if(editing){ %><%=product.imageUrl %><% } %>>
                <input type="number" class="form-control" placeholder="price" name="price" id="price" value=<% if(editing){ %><%=product.price %><% } %> >
                <textarea name="description" id="description" name="description" cols="30" rows="10" class="form-control" placeholder="description"><% if(editing){ %><%=product.description %><% } %></textarea>
                <% if (editing) { %>
                    <input type="hidden" name="productId" value="<%= product.id %>">
                <% } %>
               <input type="submit" class="btn btn-success btn-block form-control" value="<% if(editing){ %> Edit Product <% } else { %> Add Product <% } %> " >
            </form>
        </div>
    </main>
